---
layout: layouts/base.njk
section: post
---
<div class="flex w-full justify-center">
  <div class="mt-16 px-8 md:px-12 lg:px-16 xl:px-20 w-full max-w-5xl">
    <article class="prose max-w-prose">
      <h1 class="dark:text-gray-500 font-serif font-medium text-4xl">{{ title }}</h1>
      <div class="py-8 grid sm:grid-cols-2 gap-y-8 gap-x-0">
        <div class="scope">
          <span class="block font-semibold uppercase tracking-wider text-sm text-gray-600">Scope</span>
          <div class="flex flex-row wrap">
            {% for s in skill %}
            <span class="flex text-black">{{ s }}</span>
              {% if loop.last %}
              <span class="flex text-black"></span>
              {% else %}
              <span class="flex px-2 text-black">·</span>
              {% endif %}
            {% endfor %}
          </div>
        </div>
        <div class="role">
          <span class="block font-semibold uppercase tracking-wider text-sm text-gray-600">Role</span>
          <span class="block text-black">{{ role }}</span>
        </div>
        <div class="tools">
          <span class="block font-semibold uppercase tracking-wider text-sm text-gray-600">Tools</span>
          <div class="flex flex-row">
            {% for t in tool %}
            <span class="flex text-black">{{ t }}</span>
              {% if loop.last %}
              <span class="flex text-black"></span>
              {% else %}
              <span class="flex px-2 text-black">·</span>
              {% endif %}
            {% endfor %}
          </div>
        </div>
        <div class="timeline">
          <span class="block font-semibold uppercase tracking-wider text-sm text-gray-600">Timeline</span>
          <span class="block text-black">{{ timeline }}</span>
        </div>
      </div>
      <p class="text-gray-800 font-normal text-2xl">{{ summary }}</p>
      <hr>
      <div class="">
        {{ layoutContent | safe }}
        {% if tags %}
          <p>
          {% for tag in tags %}
            {%- if tag != "post" -%}
              {% set tagUrl %}/tags/{{ tag }}/{% endset %}
                <a class="text-xs px-3 py-2 text-gray-600 bg-gray-200 no-underline rounded" href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
            {%- endif -%}
          {% endfor %}
          </p>
        {% endif %}
        <hr />
          {% if nextPost.url %}
            <p class="ctr">
              <strong>Next</strong>: 
              <a class="next" href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
            </p>
          {% endif %}
          {% if prevPost.url %}
            <p class="ctr">
              <strong>Previous</strong>: 
              <a class="previous" href="{{ prevPost.url }}">{{ prevPost.data.title }}</a>
            </p>
          {% endif %}
        <nav class="mb-16">
          <a class="text-primary no-underline hover:underline focus:ring-2 focus:ring-altblack text-lg" href="{{ '/' | url }}">← Projects</a>
        </nav>
      </div>
    </article>
  </div>
</div>
 