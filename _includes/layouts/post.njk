---
layout: layouts/base.njk
section: post
---
<div class="flex w-full justify-center">
    <div class="mt-16 px-4 md:px-8 lg:px-16 w-full max-w-5xl">
        <article class="prose sm:prose lg:prose-lg xl:prose-xl">
          <h1 class="dark:text-gray-500 font-serif font-medium">{{ title }}</h1>
            <div class="dark:text-gray-400 max-w-prose">
              {{ layoutContent | safe }}
              {% if tags %}
                <p>
                {% for tag in tags %}
                  {%- if tag != "post" -%}
                    {% set tagUrl %}/tags/{{ tag }}/{% endset %}
                      <a class="text-xs px-3 py-2 text-gray-600 bg-gray-200 no-underline rounded" href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
                  {%- endif -%}
                {% endfor %}
                </p>
              {% endif %}
              <hr />
                {% if nextPost.url %}
                  <p class="ctr">
                    <strong>Next</strong>: 
                    <a class="next" href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
                  </p>
                {% endif %}
                {% if prevPost.url %}
                  <p class="ctr">
                    <strong>Previous</strong>: 
                    <a class="previous" href="{{ prevPost.url }}">{{ prevPost.data.title }}</a>
                  </p>
                {% endif %}
              <nav class="mb-16">
                <a class="text-primary no-underline hover:underline focus:ring-2 focus:ring-altblack text-lg" href="{{ '/' | url }}">‚Üê Work</a>
              </nav>
            </div>
        </article>
    </div>
</div>
 