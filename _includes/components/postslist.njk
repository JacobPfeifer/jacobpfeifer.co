<section class="grid grid-cols-1 lg:grid-cols-2 justify-center content-center pt-8">
	{% for post in postslist | reverse %}
	<div class="max-w-md flex flex-col rounded-lg overflow-hidden border border-gray-900 border-solid shadow-card my-8 lg:mx-8 bg-white transform translate-y-2 hover:translate-y-0 duration-200 ease-in-out">
		<div class="flex-none">
			<a href="{{ post.url | url }}">
				<img class="w-full" src="{{ post.data.img }}" alt="{{ post.data.alt }}">
			</a>
		</div>
		<div class="flex flex-1 flex-col justify-between">
			<div class="px-4 pt-6">
				<a href="{{ post.url | url }}">
					<h3 class="font-serif font-medium text-xl mb-2">
						{{ post.data.title }}
					</h3>
				</a>
				<p class="text-gray-800 text-base pb-2">
					{{ post.data.summary }} 
				</p>
				<a href="{{ post.url | url }}" class="font-medium">
					<p class="text-primary whitespace-nowrap">Visit Case Study</p>
				</a>
			</div>
			<div class="py-6 px-4">
				{% for skill in post.data.skill %}
				<span class="inline-block text-sm font-medium text-gray-500 mr-4 uppercase">{{ skill }}</span>
				{% endfor %}
			</div>
		</div>
	</div>
	{% endfor %}
</section>
