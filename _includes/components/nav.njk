{% set navPages = collections.all | eleventyNavigation  %}

{% macro renderNavListItem(entry,rel) -%}

  {% if entry.url == page.url or entry.title == eleventyNavigation.parent or entry.title == eleventyComputed.key%}
    {% set highlight = 'font-medium text-black' %}
    {% set current = 'aria-current="page"' %}
  {% else %}
    {% set highlight = 'text-black' %}
    {% set current = '' %}
  {% endif %}
 
  <a class="
    w-max 
    mx-4
    px-2
    py-1
    block
    focus:text-gray-900 
    bg-transparent 
    dark:bg-transparent
    mt-0 
    m-0
    text-lg
    shadow-brand
    hover:shadow-encompass
    transform
    transition
    duration-200
    ease-in-out
    focus:shadow-encompass focus:ring-2 focus:ring-altblack focus-visible:outline-none
    {{ highlight }}
    " 
    href="{{ entry.url | url }}">{{ entry.title }}
  </a>
{%- endmacro %}

<div class="md:bg-white dark:bg-gray-900 p-0 flex w-full justify-end">
  <div class="flex justify-start items-center flex-row ">
    <nav class="flex flex-row my-4 justify-end flex-grow ">
    {%- for entry in navPages %}
    {{ renderNavListItem(entry,'child') }}
    {%- endfor -%}
    </nav>
  </div>
</div>
